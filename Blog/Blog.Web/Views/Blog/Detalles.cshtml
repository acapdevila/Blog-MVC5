@model Blog.ViewModels.Blog.DetallesPostBlogViewModel

@{
    ViewBag.Title = Model.Post.Titulo;
}


<br />
<div class="row">
    <!-- Blog Post Content Column -->
    <div class="col-lg-8">
        <!-- Blog Post -->
        @Html.DisplayFor(m => m.Post, "DisplayPost")
        
        
        <div>
          @Html.Partial("_ListaLineasResumenPost",Model.PostsSugeridos)
        </div>
                
        <div class="clearfix"></div>
        

        <!-- Blog Comments -->
        <div class="well">
            @Html.Partial("_Disqus", Model.Post)
        </div>
    </div>

    @Html.Partial("_SidebarPrincipal")

</div>
<!-- /.row -->
@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Editar", "Edit", "Posts", new {id = Model.Post.Id}, null)
    </p>
}