@model Blog.Modelo.Post

@{
    ViewBag.Title = Model.Titulo;
}

<br />
<div class="row">
    <!-- Blog Post Content Column -->
    <div class="col-lg-8">
        <!-- Blog Post -->
        <!-- Title -->
        <h1>@Html.DisplayFor(model => model.Titulo)</h1>
        <!-- Author -->
        @*<p class="lead">
            by <a href="#">@Html.DisplayFor(model => model.Autor)</a>
        </p>*@
        <hr>
        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Publicado el @Model.FechaPost.ToString("D")</p>
        <hr>
        <!-- Preview Image 
        <img class="img-responsive" src="http://placehold.it/900x300" alt="">
        <hr>-->
        <!-- Post Content -->
        @Html.Raw(Model.ContenidoHtml)
        <hr>
        <!-- Blog Comments -->
        <div class="well">
            @Html.Partial("_Disqus", Model)
        </div>
    </div>

    @Html.Partial("_SidebarPrincipal")

</div>
<!-- /.row -->
<hr>

