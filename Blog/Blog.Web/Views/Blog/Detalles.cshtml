@model Blog.Modelo.Posts.Post

@{
    ViewBag.Title = Model.Titulo;
}


<br />
<div class="row">
    <!-- Blog Post Content Column -->
    <div class="col-lg-8">
        <!-- Blog Post -->
        @Html.DisplayFor(m => m, "DisplayPost")

          <!-- Blog Comments -->
        <div class="well">
            @Html.Partial("_Disqus", Model)
        </div>
    </div>

    @Html.Partial("_SidebarPrincipal")

</div>
<!-- /.row -->
@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Editar", "Edit", "Posts", new {id = Model.Id}, null)
    </p>
}