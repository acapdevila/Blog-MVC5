@using Blog.Servicios.Configuracion
@using Blog.Web.Helpers
@model Blog.ViewModels.Post.ListaGestionBlogsViewModel

@{
    ViewBag.Title = "Lista posts";
}

@section Scripts {
    <script id="dsq-count-scr" src="@($"http://{WebConfigParametro.DisqusShortname}.disqus.com/count.js")" async></script>
}

<h2>Lista posts</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            Título
        </th>
       <th></th>

    </tr>

@foreach (var item in Model.ListaBlogs) {
    <tr>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) 
        </td>
        <td>
            @Html.ActionLink(item.Titulo, "Details", new {id = item.Id})

        </td>
        <td>
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>

    </tr>
}

</table>
