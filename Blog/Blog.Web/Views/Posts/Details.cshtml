@using Blog.Web.Configuracion
@using Blog.Web.Helpers
@model Blog.Modelo.Post

@{
    ViewBag.Title = "Details";
}

@section Scripts {
    <script id="dsq-count-scr" src="@($"http://{WebConfigParametro.DisqusShortname}.disqus.com/count.js")" async></script>
}

<br />
<div class="row">
    <!-- Blog Post Content Column -->
    <div class="col-lg-8">
        <!-- Blog Post -->
        <!-- Title -->
        <h1>@Html.DisplayFor(model => model.Titulo)</h1>
        <!-- Author -->
        <p class="lead">
            by <a href="#">@Html.DisplayFor(model => model.Autor)</a>
        </p>
        <hr>
        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Publicado el @Model.FechaPublicacion.ToString("D")</p>
        <hr>
        <!-- Preview Image 
        <img class="img-responsive" src="http://placehold.it/900x300" alt="">
        <hr>-->
        <!-- Post Content -->
        @Html.Raw(Model.ContenidoHtml)
     </div>

    @Html.Partial("_SidebarPrincipal")

</div>
<!-- /.row -->

<div>
    <hr />
    <dl class="dl-horizontal">
      
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UrlSlug)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UrlSlug)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaPost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaPost)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.EsBorrador)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EsBorrador)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaPublicacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaPublicacion)
        </dd>
        <dt>
            Comentarios
        </dt>

        <dd>
            <a href="@($"{Url.RutaUrlBlogPost(Model.FechaPublicacion, Model.UrlSlug)}#disqus_thread")"></a>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Volver al listado", "Index")
</p>
