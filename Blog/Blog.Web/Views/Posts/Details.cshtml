@model Blog.Modelo.Post

@{
    ViewBag.Title = "Details";
}

<br />
<div class="row">
    <!-- Blog Post Content Column -->
    <div class="col-lg-8">
        <!-- Blog Post -->
        <!-- Title -->
        <h1>@Html.DisplayFor(model => model.Titulo)</h1>
        <!-- Author -->
        <p class="lead">
            by <a href="#">@Html.DisplayFor(model => model.Autor)</a>
        </p>
        <hr>
        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Publicado el @Model.FechaPublicacion.ToString("D")</p>
        <hr>
        <!-- Preview Image 
        <img class="img-responsive" src="http://placehold.it/900x300" alt="">
