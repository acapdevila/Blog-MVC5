@model Blog.Web.ViewModels.Post.ListaGestionPostsViewModel

@{
    ViewBag.Title = "Lista posts";
}

<h2>Lista posts</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            Título
        </th>
        <th>
            Fecha post
        </th>
        <th>
           Es borrador
        </th>
        <th>
           Fecha publicación
        </th>
        <th></th>

    </tr>

@foreach (var item in Model.ListaPosts) {
    <tr>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) 
        </td>
        <td>
            @Html.ActionLink(item.Titulo, "Details", new { id = item.Id })
            
        </td>
        <td>
            @item.FechaPost.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EsBorrador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaPublicacion)
        </td>
        <td>
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>

    </tr>
}

</table>
