@model Ac.ViewModels.Post.PublicarPost
@{
    ViewBag.Title = "Publicar";
}

@Scripts.Render("~/bundles/controlesedicion")
@Styles.Render("~/bundles/controlesedicioncss")
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckeditor/config.js"></script>

<h2>Publicar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Parámetros de la publicación</h4>
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Id)
    
    <div class="form-group">
        @Html.LabelFor(model => model.UrlSlug, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UrlSlug, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UrlSlug, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaPost, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-xs-2">
            @Html.EditorFor(model => model.FechaPost, "DatePicker", new { htmlAttributes = new { @class = "form-control col-xs-2" } })
            @Html.ValidationMessageFor(model => model.FechaPost, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EsRssAtom, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-xs-2">
            @Html.EditorFor(model => model.EsRssAtom)
        </div>
    </div>
        <div class="btn-group col-xs-offset-2">
                <input id="btnCancelar" name="boton" type="submit" value="Cancelar" class="btn btn-default " />
                <input id="btnPublicarAhoraYVer" name="boton" type="submit" value="Publicar y ver" class="btn btn-primary" />
                <input id="btnPublicarYMostrarHome" name="boton" type="submit" value="Publicar y mostrar Home" class="btn btn-primary" />
         </div>
       
    
   
    <hr/>
    <h4>Programar la publicación</h4>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaPublicacion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-xs-2">
            @Html.EditorFor(model => model.FechaPublicacion, "DatetimePicker", new { htmlAttributes = new { @class = "form-control col-xs-2" } })
            @Html.ValidationMessageFor(model => model.FechaPublicacion, "", new { @class = "text-danger" })
        </div>
    </div>
    
<div class="form-group">
<div class="col-xs-2 col-xs-offset-2">
            
    <input id="btnProgramarPublicacion" name="boton" type="submit" value="Programar publicación" class="btn btn-primary navbar-btn" />
  
    </div>
       
</div>

</div>
}
<br/><br/>
<p>
    @Html.ActionLink("Volver a la lista de posts", "Index")
    
</p>

<p>
    
    @Html.ActionLink("Volver a la lista de borradores", "Index", "Borradores")
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

   

}
