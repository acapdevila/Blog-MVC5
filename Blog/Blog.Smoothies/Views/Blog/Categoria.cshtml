@using System.Web.Mvc.Html
@model Blog.ViewModels.Categoria.CategoriaViewModel

@{
    ViewData["Title"] = Model.NombreCategoria;
}
<br />
<div class="row">
    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h2 class="page-header">
            Categoria: @Model.NombreCategoria
            @*<small>Secondary Text</small>*@
        </h2>

        <!-- First Blog Post -->
        @Html.Partial("_ListaPostsCategoria", Model.ListaPosts.ToList())


        <!-- Pager-->
        <div class="clearfix"></div>
        <ul class="pager">
            @if (Model.ListaPosts.HasNextPage)
            {
                <li class="previous">
                    <a href="@Url.Action("Categoria", new { id=Model.Id, pagina = Model.ListaPosts.PageNumber + 1})">&larr; Entradas más antiguas</a>
                </li>
            }
            @if (Model.ListaPosts.HasPreviousPage)
            {
                <li class="next">
                    <a href="@Url.Action("Categoria", new { id=Model.Id, pagina = Model.ListaPosts.PageNumber - 1})">Entradas más recientes &rarr;</a>
                </li>
            }
        </ul>

    </div>
    @Html.Partial("_SidebarPrincipal")

</div>
