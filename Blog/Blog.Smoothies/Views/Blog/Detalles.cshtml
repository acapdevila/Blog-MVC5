@using Blog.Smoothies.Helpers
@model Blog.Modelo.Posts.Post

@{
    ViewBag.Title = Model.Titulo;
 }
<meta itemprop="url" content="@Url.RutaUrlBlogPost(Model.FechaPost,Model.UrlSlug)" />
        <br />
        <div class="row">
            <!-- Blog Post Content Column -->
            <div class="col-lg-8">
                <!-- Blog Post -->
                <div itemscope itemtype="http://schema.org/Recipe">
                    @Html.DisplayFor(m => m, "DisplayPost")
                 </div>
                    <!-- Blog Comments -->
                    <div class="well">
                        @Html.Partial("_Disqus", Model)
                    </div>
                </div>

            @Html.Partial("_SidebarPrincipal")

        </div>
        <!-- /.row -->
