@using Blog.Smoothies.Helpers
@using PagedList;

@model IPagedList<Blog.Modelo.Posts.LineaResumenPost>

@*Primera entrada del blog en gran*@

    @if (Model.Any())
    {
        var item = Model.First();

        <h1 class="typo">
            <a href="@Url.RutaUrlBlogPost(item.FechaPost, item.UrlSlug)">@item.Titulo</a>
        </h1>
                    @*<p class="lead">
                            by @item.Autor
                        </p>*@
                <p class="small grey">
                    <span class="glyphicon glyphicon-time"></span> @item.FechaPost.ToString("D")
                </p>

                <a href="@Url.RutaUrlBlogPost(item.FechaPost, item.UrlSlug)">
                    @Html.Raw(item.Subtitulo)
                    </a>
                    <a class="btn btn-default btn-sm text-uppercase smallest" href="@Url.RutaUrlBlogPost(item.FechaPost, item.UrlSlug)">Seguir leyendo <span class="glyphicon glyphicon-arrow-right"></span></a>
                    <hr>
                    }

                    @*Resta d'entrades en petit*@


                    @foreach (var item in Model.Skip(1))
                    {
                        <div class="col-md-6 clear-row">
                            <h2 class="typo">
                                <a href="@Url.RutaUrlBlogPost(item.FechaPost, item.UrlSlug)">@item.Titulo</a>
                            </h2>
                            @*<p class="lead">
                                    by @item.Autor
                                </p>*@
                            <p class="small grey">
                                <span class="glyphicon glyphicon-time"></span> @item.FechaPost.ToString("D")
                            </p>
                            <a href="@Url.RutaUrlBlogPost(item.FechaPost, item.UrlSlug)">
                                @Html.Raw(item.Subtitulo)
                            </a>

                            <a class="btn btn-default btn-sm text-uppercase smallest" href="@Url.RutaUrlBlogPost(item.FechaPost, item.UrlSlug)">Seguir leyendo <span class="glyphicon glyphicon-arrow-right"></span></a>
                        </div>
                    }

                  

