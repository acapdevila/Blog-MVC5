@using Blog.Servicios.Configuracion
@using Blog.Smoothies.Helpers
@using PagedList.Mvc
@model Blog.ViewModels.Post.ListaGestionPostsViewModel

@{
    ViewBag.Title = "Lista posts";
}

@section Scripts {
    <script id="dsq-count-scr" src="@($"https://{WebConfigParametro.DisqusShortname}.disqus.com/count.js")" async></script>
}

<h2>Posts (@Model.ListaPosts.TotalItemCount)</h2>

<p>
    @using (Html.BeginForm())
    { 
    @Html.EditorFor(m => m.BuscarPor, "AutocompleteMultipleBuscador", new
{
    ajaxCallbackUrlAction = "QuickMultipleSearch",
    ajaxCallbackUrlController = "Tags"
})

    <input id="btnBuscar" name="boton" type="submit" value="Buscar" class="btn btn-default navbar-btn"/>

    @Html.ActionLink("Crear nuevo", "Crear", "Borradores")
    }
</p>
<table class="table">
    <tr>
        <th style="width: 110px"></th>
        <th>
            Título
        </th>
        <th>
            Categorías
        </th>
        <th>
            Tags
        </th>
        <th>
            Fecha post
        </th>
		<th>
           Rss Atom
        </th>
        <th>
            Fecha publicación
        </th>
        <th>
            Comentarios
        </th>

    </tr>

@foreach (var item in Model.ListaPosts) {
    <tr>
        <td>
            <div class="btn-group">
                @Html.ActionLink("Editar", "Edit", new {id = item.Id}, new{@class= "btn btn-default" })
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">Acciones</span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        @Html.ActionLink("Modificar publicación", "Publicar", new { id = item.Id })
                    </li>
                    @*<li><a href="#">Another action</a></li>
        <li><a href="#">Something else here</a></li>*@
                    <li role="separator" class="divider">  b bv</li>
                    <li>
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                    </li>
                </ul>
            </div>
        </td>
        <td>
            @Html.ActionLink(item.Titulo, "Details", new {id = item.Id})

        </td>
        <td>
            @item.Categorias
        </td>
        <td>
            @item.Tags
        </td>
        <td>
            @item.FechaPost.ToShortDateString()
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.EsRssAtom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaPublicacion)
        </td>
        <td>
            <a href="@($"{Url.RutaUrlBlogPost(item.FechaPublicacion, item.UrlSlug)}#disqus_thread")" data-disqus-identifier="@item.Id"></a>
        </td>
   

    </tr>
 
}
    <tr>
        <td colspan="9">
            @Html.TotalesListaPaginada(Model.ListaPosts, " {0} - {1} posts mostrados de {2}")
            @Html.PagedListPager(Model.ListaPosts, pagina => Url.Action("Index", new { pagina }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
        </td>

    </tr>

</table>
