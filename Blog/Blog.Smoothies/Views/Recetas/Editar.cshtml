@model Blog.Smoothies.Views.Recetas.ViewModels.EditarRecetaViewModel

@{
    ViewBag.Title = "Editar receta";
}



@Scripts.Render("~/bundles/controlesedicion")
@Styles.Render("~/bundles/controlesedicioncss")
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckeditor/config.js"></script>

<h2>Editar receta</h2>


@using (Html.BeginForm("Editar", "Recetas", FormMethod.Post, new { id="formularioReceta", enctype = "multipart/form-data" }))
{
    
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Editar receta</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.EditorFor(m => m.EditorReceta, "EditorReceta")

        </div>
    

}

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
