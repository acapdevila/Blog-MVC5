@model Blog.Smoothies.Views.Recetas.ViewModels.Editores.EditorInstruccion

        <tr class="editorInstruccion">
            <td class="col-md-11">
                @Html.HiddenFor(m => m.Posicion)
                
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.Nombre, new { @class = "form-control" , rows="2" } )
                    </div>
                </div>
            </td>
            <td class="col-md-1">               
                @Html.HiddenFor(x => x.EstaMarcadoParaEliminar, new { @class = "mark-for-delete" })
                <a href="#" class="btn" onclick="javascript: removeNestedForm(this, 'tr.editorInstruccion', 'input.mark-for-delete'); return false;">
                    Eliminar
                </a>
             </td>
        </tr>


