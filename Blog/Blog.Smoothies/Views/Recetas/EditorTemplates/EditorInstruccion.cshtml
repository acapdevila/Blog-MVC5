@model Blog.Smoothies.Views.Recetas.ViewModels.EditorInstruccionPartialModel


        <tr class="editor-field editorInstruccion">
            <td>
                @Html.HiddenFor(m => m.Id)

                <div class="form-group">
                  <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Nombre, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
            <td>               
                @Html.HiddenFor(x => x.EstaMarcadoParaEliminar, new { @class = "mark-for-delete" })
                <a href="#" class="btn" onclick="javascript: removeNestedForm(this, 'tr.editorInstruccion', 'input.mark-for-delete'); return false;">
                    Eliminar
                </a>
             </td>
        </tr>


