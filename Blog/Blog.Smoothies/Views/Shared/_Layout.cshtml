<!DOCTYPE html>
<html lang="es">
<head>

    @if (Request != null && Request.Url != null && (Request.Url.AbsoluteUri.Contains("azurewebsites.net")
                                                    || Request.Url.AbsoluteUri.Contains("pagina=")
                                                    || Request.Url.AbsoluteUri.Contains(@"/archivo/")
                                                    || Request.Url.AbsoluteUri.Contains(@"/posts/")
                                                    || Request.Url.AbsoluteUri.Contains(@"/categorias/")
                                                    || Request.Url.AbsoluteUri.Contains(@"/blogs/")
                                                    || Request.Url.AbsoluteUri.Contains(@"/account/")
                                                    || Request.Url.AbsoluteUri.Contains(@"/manage/")
                                                    || Request.Url.AbsoluteUri.Contains(@"/tags/")
                ))
    {
        <meta name="robots" content="noindex,follow" />
    }

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @RenderSection("linksnextprev", false)

    @* seo *@

    @{
        var titulo = ViewBag.Title ?? "by Laura García";
        var descripcion = ViewBag.MetaDescripcion ?? "Maquetadora web, pianista y cocinillas. Mamá de Kai y loca de las plantas. Recetas sin gluten y sin azúcar.";
        var urlcanonica = $"https://bylauragarcia.com{HttpContext.Current.Request.Url.AbsolutePath}";
        var palabrasclave = ViewBag.MetaPalabrasClave ?? "paleo,pan de trigo sarraceno,trigo sarraceno,pilea peperomioides,pilea,smoothies,recetas,batidos,superalimentos,superfoods,desayuno,yogur de leche de coco,leche de coco,sin gluten,sin azúcar,ghee, brownie";
        var imagenPrincipal = ViewBag.ImagenPrincipal;
    }

    <title>@titulo</title>

    <link rel="canonical" href="@urlcanonica" />
    <meta name="description" content="@descripcion" />
    <meta name="keywords" content="@palabrasclave">
    <meta name="author" content="Laura García">

    <meta property="og: site_name" content="by Laura García" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@titulo" />
    <meta property="og:description" content="@descripcion" />
    <meta property="og:url" content="@urlcanonica" />
@if (!string.IsNullOrEmpty(imagenPrincipal))
{
    <meta property="og:image" content="@imagenPrincipal">
        
    <meta name="twitter:image" content="@imagenPrincipal" />
}
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:description" content="@descripcion" />
    <meta name="twitter:title" content="@titulo" />
    
    
    

    @* seo *@


    <meta name="p:domain_verify" content="92957699e08a4b05be4fa0e9b0fee111" />

    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")


    @Html.Partial("_GoogleAnalytics")

    @Html.Partial("_AceptarCookies")


    @RenderSection("head", required: false)

</head>

<body>

    <div class="container body-content">

        <nav class="navbar">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="navbar-collapse collapse navbar-right">
                    @Html.Partial("_MenuPrincipal")
                </div>
                <div class="navbar-header logo">
                    @*<h4 class="adjust color1">by</h4>
                    <h1 class="adjust"><a href="/">Laura <br />García </a></h1>*@
                    <a href="/"><img src="~/Content/imagenes/logo.png" alt="by Laura García" /></a>
                </div>
            </div>
        </nav>   


        @RenderBody()
        <div class="clearfix"></div>
        <hr />
        
        @Html.Partial("_Footer")

       
        <br />
        <p class="small grey">&copy; Laura García · Todos los derechos reservados </p>

        @*@Html.Partial("_LoginPartial")*@

    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
