@model Blog.Smoothies.Views.Blog.ViewModels.DetallesPostBlogViewModel
@using Blog.Modelo.Posts


<script type="application/ld+json">
            {
            "@@context": "http://schema.org",
            "@@type": "Article",
            "headline": "@Model.Post.Titulo",
            "image": ["@Model.Post.UrlImagenPrincipal"],
            "datePublished": "@Model.Post.FechaPublicacion.ToString("yyyy-MM-ddTHH:mm:ss")+02:00",
            "author": { "@@type": "Person", "name": "@(Model.Post.Autor ?? "Laura García")" },
            "publisher": { "@@type": "Organization", "name": "by Laura García",
            "logo": { "@@type": "ImageObject", "url": "https://bylauragarcia.com/content/imagenes/logo.png"}},
            "description": "@Model.Post.Descripcion"
            }
        </script>
