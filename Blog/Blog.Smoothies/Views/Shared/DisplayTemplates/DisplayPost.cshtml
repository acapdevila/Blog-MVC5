@model Blog.Modelo.Posts.Post


@if (Model.EsMostrarDatosEstructurados)
{
    @section head
    {
        <script type="application/ld+json">
         {
                "@@context": "http://schema.org",
                "@@type": "Article",
                "headline": "@Model.Titulo",
                "image": ["@Model.UrlImagenPrincipal"],
                "datePublished": "@Model.FechaPublicacion.ToString("yyyy-MM-ddTHH:mm:ss")+02:00",
                "author": { "@@type": "Person", "name": "@(Model.Autor ?? "Laura García")" },
                "publisher": { "@@type": "Organization", "name": "by Laura García", 
                        "logo": { "@@type": "ImageObject", "url": "https://bylauragarcia.com/content/imagenes/logo.png"}},
                "description": "@Model.Descripcion"
         }
        </script>
    }
}

<!-- Blog Post -->
<!-- Title -->
<h2>@Html.DisplayFor(model => model.Titulo)</h2>
<!-- Author -->
@*<p class="lead">
        by <a href="#">@Html.DisplayFor(model => model.Autor)</a>
    </p>*@
<hr>
<!-- Date/Time -->
<p class="small text-uppercase">

    @if (User.Identity.IsAuthenticated)
    {
        <span class="pull-right">
            @Html.ActionLink("Editar", "Edit", "Posts", new { id = Model.Id }, null) |
            @Html.ActionLink("Eliminar", "Delete", "Posts", new { id = Model.Id }, null) |
            @Html.ActionLink("Volver al listado", "Index", "Posts")
        </span>
    }
</p>
@Html.Raw(Model.Subtitulo)
<!-- Preview Image
<img class="img-responsive" src="http://placehold.it/900x300" alt="">
<hr>-->
<!-- Post Content -->
<div class="postcontent">
    @Html.Raw(Model.ContenidoHtml)
</div>
@*@Html.Raw(Model.PostContenidoHtml)*@


<hr>

@if (User.Identity.IsAuthenticated)
{
    <p class="small text-uppercase">
        @Html.ActionLink("Editar", "Edit", "Posts", new { id = Model.Id }, null) |
        @Html.ActionLink("Eliminar", "Delete", "Posts", new { id = Model.Id }, null) |
        @Html.ActionLink("Volver al listado", "Index", "Posts")
    </p>
}
<br />



