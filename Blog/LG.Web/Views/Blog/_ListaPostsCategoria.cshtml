@using Blog.Smoothies.Helpers

@model IList<Blog.Modelo.Posts.LineaResumenPost>

@for (int i = 0; i < Model.Count; i=i+2)
{
    var items = Model.Skip(i).Take(2); 
            
    <div class="row">
        @foreach (var item in items)
        {
            <div class="postsmall col-md-6">
                <h2 class="typo">
                    <a href="@Url.RutaUrlBlogPost(item.FechaPost, item.UrlSlug)">@item.Titulo</a>
                </h2>
                <a href="@Url.RutaUrlBlogPost(item.FechaPost, item.UrlSlug)">
                    @Html.Raw(item.Subtitulo)
                </a>
                <a class="text-uppercase smallest" href="@Url.RutaUrlBlogPost(item.FechaPost, item.UrlSlug)">Leer más</a>
            </div>
        }

    </div>
}

       

    

