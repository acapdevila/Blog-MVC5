@using LG.Web.Views.UtensiliosGestion.ViewModels.Editores
@model EditorDeUtensilio

@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.AccionPost)

<div class="form-group">
    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>
</div>


<div class="form-group">
    @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Url, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Categoria, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Categoria, "AutocompleteUnico", new
           {
               ajaxActionName = "AutocompleteSearch",
               ajaxControllerName = "UtensiliosCategorias"
           })
        @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
    </div>
</div>

@Html.EditorFor(m => m.EditorImagen, "EditorImagen")

<hr />

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <input id="btnGuardarYSalir" name="@Model.AccionPost" type="submit" value="Guardar" class="btn btn-default navbar-btn" />&nbsp;&nbsp;
            </li>
        </ul>
    </div>
</nav>

<script type="text/javascript">
    $(document).ready(function () {
        alCambiarNombreRecetaCopiarEnAltImagen();
    });

    function alCambiarNombreRecetaCopiarEnAltImagen() {
        $("[id$='Nombre']").on('change', function () {

            var $altImagen = $("[id$='AltImagen']");

            if(!$altImagen.val())
                $altImagen.val($(this).val());
        });
    }


</script>