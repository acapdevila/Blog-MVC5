@model LG.Web.Views.UtensiliosCategorias.ViewModels.CrearCategoriaUtensilioViewModel

@{
    ViewBag.Title = "Crear categoría de utensilio";
}

@Scripts.Render("~/bundles/controlesedicion")
@Styles.Render("~/bundles/controlesedicioncss")

<h2>Crear categoría utensilio</h2>

@using (Html.BeginForm("Crear", "UtensiliosCategorias", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Crear categoría</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @Html.EditorFor(m => m.EditorCategoria, "EditorCategoriaDeUtensilio")

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
